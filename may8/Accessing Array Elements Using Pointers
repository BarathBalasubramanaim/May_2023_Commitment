/* Accessing Array Elements Using Pointers */
#include<stdio.h>
int main()
{
	int number[]={24,34,44,54,64,74};
	int i,*ptr;
	ptr=&number[0];
	for(i=0;i<=5;i++)
	{
		printf("Address of a pointer:%u Value of a pointer:%d\n",ptr,*ptr);
		ptr++;
	}
	return 0;
}

/*OUTPUT

Address of a pointer:1303815744 Value of a pointer:24
Address of a pointer:1303815748 Value of a pointer:34
Address of a pointer:1303815752 Value of a pointer:44
Address of a pointer:1303815756 Value of a pointer:54
Address of a pointer:1303815760 Value of a pointer:64
Address of a pointer:1303815764 Value of a pointer:74

*/
